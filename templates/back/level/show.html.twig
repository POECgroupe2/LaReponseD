{% extends 'base.html.twig' %}

{% block title %}Niveau de difficulté
{% endblock %}

{% block body %}
	{% include 'back/partial/back_nav_bar.html.twig' %}
	<div class="container pt-5">
		<div class="row mb-2">
			<div class="col-8 mx-auto">
				<h1 class="text-center my-5 fs-1">Niveau {{ level.name }}</h1>
				<a class="btn btn_return mb-5" href="{{ path('app_back_level_index') }}">Retour à  la liste</a>
				<table class="table text-center">
					<tbody class="align-middle">
						<tr>
							<th class="red_line">Id</th>
							<td>{{ level.id }}</td>
						</tr>
						<tr>
							<th class="red_line">Name</th>
							<td>{{ level.name }}</td>
						</tr>
					</tbody>
				</table>
				<div class="col d-flex justify-content-center">
					<a class="btn btn-sm btn_edit" href="{{ path('app_back_level_edit', {'id': level.id}) }}">Modifier</a>
					{{ include('back/level/_delete_form.html.twig') }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
