{% extends 'base.html.twig' %}

{% block title %}Édition Réponse
{% endblock %}

{% block body %}
	{% include 'back/partial/back_nav_bar.html.twig' %}
	<div class="container pt-5">
		<div class="row mb-2">
			<div class="col-8 mx-auto">
				<h1>Modifier la réponse à la ou les questions suivantes</h1>
				<p>
					{% for questions in answer.questionAnswers %}
						{{ questions.question.content }}
					{% endfor %}
				</p>
				<a href="{{ path('app_back_answer_index') }}">Retour à la liste</a>
				<div class="col">
					{{ include('back/answer/_form.html.twig', {'button_label': 'Update'}) }}
					{{ include('back/answer/_delete_form.html.twig') }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
