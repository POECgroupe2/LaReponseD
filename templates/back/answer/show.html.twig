{% extends 'base.html.twig' %}

{% block title %}Answer
{% endblock %}

{% block body %}
	{% include 'back/partial/back_nav_bar.html.twig' %}
	<div class="container pt-5">
		<div class="row mb-2">
			<div class="col-8 mx-auto">
				<h1>Réponse</h1>
				<a href="{{ path('app_back_answer_index') }}">Retour à  la liste</a>
				<table class="table">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ answer.id }}</td>
						</tr>
						<tr>
							<th>Content</th>
							<td>{{ answer.content }}</td>
						</tr>
						<tr>
							<th>CreatedAt</th>
							<td>{{ answer.createdAt ? answer.createdAt|date('Y-m-d') : '' }}</td>
						</tr>
					</tbody>
				</table>
				<div class="col d-flex justify-content-center">
					<a class="btn btn-sm btn_edit" href="{{ path('app_back_answer_edit', {'id': answer.id}) }}">Modifier</a>
					{{ include('back/answer/_delete_form.html.twig') }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
