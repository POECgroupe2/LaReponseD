{% extends 'base.html.twig' %}

{% block title %}Game
{% endblock %}

{% block body %}
	{% include 'back/partial/back_nav_bar.html.twig' %}
	<div class="container pt-5">
		<div class="row mb-2">
			<div class="col-8 mx-auto">
				<h1 class="text-center my-5">{{ game.name }}</h1>
				<a class="btn btn_return mb-5" href="{{ path('app_back_game_index') }}">Retour Ã   la liste</a>
				<div class="col  fw-bold">
					{% for questions in game.questions %}
					
					{{ dump(questions) | length }}
						<h2 class="response_question fw-bold">{{ questions.question.content }} </h2>
						
					{% endfor %} 
				</div>
				<table class="table">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ game.id }}</td>
						</tr>
						<tr>
							<th>Name</th>
							<td>{{ game.name }}</td>
						</tr>
						<tr>
							<th>CreatedAt</th>
							<td>{{ game.createdAt ? game.createdAt|date('Y-m-d') : '' }}</td>
						</tr>
					</tbody>
				</table>
				<div class="col d-flex justify-content-center">
					<a class="btn btn-sm btn_edit" href="{{ path('app_back_game_edit', {'id': game.id}) }}">Modifier</a>
					{{ include('back/game/_delete_form.html.twig') }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
