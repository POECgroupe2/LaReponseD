{% extends 'base.html.twig' %}

{% block title %}Game
{% endblock %}

{% block body %}
	{% include 'back/partial/back_nav_bar.html.twig' %}
	<div class="container pt-5">
		<div class="row mb-2">
			<div class="col-8 mx-auto">
				<h1 class="text-center my-5 fs-1">{{ game.name }}</h1>
				<a class="btn btn_return mb-5" href="{{ path('app_back_game_index') }}">Retour Ã   la liste</a>
				<div class="col  fw-bold mb-5">
					{% for questions in game.questions %}
					
					{# {{ dump(questions) | length }} #}
						<h2 class="response_question fw-bold mb-2">{{ questions.content }} </h2>
						
					{% endfor %} 
				</div>
				<table class="table text-center">
					<tbody class="align-middle">
						<tr>
							<th class="red_line">Id</th>
							<td>{{ game.id }}</td>
						</tr>
						<tr>
							<th class="red_line">Name</th>
							<td>{{ game.name }}</td>
						</tr>
						<tr>
							<th class="red_line">CreatedAt</th>
							<td>{{ game.createdAt ? game.createdAt|date('Y-m-d') : '' }}</td>
						</tr>
					</tbody>
				</table>
				<div class="col d-flex justify-content-center">
					<a class="btn btn-sm btn_edit" href="{{ path('app_back_game_edit', {'id': game.id}) }}">Modifier</a>
					{{ include('back/game/_delete_form.html.twig') }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
