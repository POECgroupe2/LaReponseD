{% extends 'base.html.twig' %}

{% block title %}Liste des catégories
{% endblock %}

{% block body %}
	{% include 'back/partial/back_nav_bar.html.twig' %}
	<div class="container pt-5">
		<div class="row mb-2">
			<h1>Liste des catégories</h1>
			<div class="col-10 mx-auto">
				<a href="{{ path('app_back_category_new') }}">Ajouter une catégorie</a>
				<table class="table">
					<thead>
						<tr>
							<th>Id</th>
							<th>Name</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody>
						{% for category in categories %}
							<tr>
								<td>{{ category.id }}</td>
								<td>{{ category.name }}</td>
								<td>
									<a class="btn btn-sm btn_show" href="{{ path('app_back_category_show', {'id': category.id}) }}">Voir</a>
									<a class="btn btn-sm btn_edit" href="{{ path('app_back_category_edit', {'id': category.id}) }}">Modifier</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="3">Catégories non trouvées</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
