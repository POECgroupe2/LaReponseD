{% extends 'base.html.twig' %}

{% block title %}Question
{% endblock %}

{% block body %}
	{% include 'back/partial/back_nav_bar.html.twig' %}
	<div class="container pt-5">
		<div class="row mb-2">
			<div class="col-8 mx-auto">
		
				<h1 class="text-center my-5 fw-bold fs-2">{{ question.content }}</h1>
			<a class="btn btn_return mb-5" href="{{ path('app_back_question_index') }}">Retour à  la liste</a>
				<div class="col  fw-bold">
					{% for answers in question.questionAnswers %}
						<h2 class="response_question fw-bold">{{ answers.answer.content }} <span class="response_good_{{ answers.isGood ? 'true' : 'false'}} mx-3">  {{ answers.isGood ? 'Réponse Vrai' : 'Réponse Fausse'}}</span></h2>
						<div class="col mb-3 mb-5 my-3">
							<a class="btn btn-sm btn_show text-center mx-3" href="{{ path('app_back_answer_show', {'id': answers.answer.id}) }}">Voir</a>
							<a class="btn btn-sm btn_edit text-center mx-3" href="{{ path('app_back_answer_edit', {'id': answers.answer.id}) }}">Modifier</a>
							<a class="btn btn-sm btn_delete text-center mx-3" href="{{ path('app_back_answer_delete', {'id': answers.answer.id}) }}">Supprimer</a>
						</div>
					{% endfor %}
				</div>
				
				<table class="table">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ question.id }}</td>
						</tr>
						<tr>
							<th>Content</th>
							<td>{{ question.content }}</td>
						</tr>
						<tr>
							<th>CreatedAt</th>
							<td>{{ question.createdAt ? question.createdAt|date('Y-m-d') : '' }}</td>
						</tr>
						<tr>
							<th>UpdatedAt</th>
							<td>{{ question.updatedAt ? question.updatedAt|date('Y-m-d') : '' }}</td>
						</tr>
					</tbody>
				</table>
				<div class="col d-flex justify-content-center">
					<a class="btn btn-sm btn_edit" href="{{ path('app_back_question_edit', {'id': question.id}) }}">Modifier</a>
					{{ include('back/question/_delete_form.html.twig') }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
